<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_dress"
            android:onClick="LifeStyle_onClick"
            style="@style/indextext"
            android:drawableBottom="@mipmap/icon_cloth"
            android:text="穿衣指数"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <!--#2E8B57"-->
        <TextView
            android:id="@+id/tv_washcar"
            android:onClick="LifeStyle_onClick"
            style="@style/indextext"
            android:text="洗车指数"
            android:drawableBottom="@mipmap/icon_car"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tv_cold"
            android:onClick="LifeStyle_onClick"
            style="@style/indextext"
            android:text="感冒指数"
            android:drawableBottom="@mipmap/icon_ganmao">
        </TextView>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_sport"
            android:onClick="LifeStyle_onClick"
            style="@style/indextext"
            android:text="运动指数"
            android:drawableBottom="@mipmap/icon_sport"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tv_rays"
            android:onClick="LifeStyle_onClick"
            style="@style/indextext"
            android:text="紫外线指数"
            android:drawableBottom="@mipmap/icon_light"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tv_air"
            android:onClick="LifeStyle_onClick"
            style="@style/indextext"
            android:text="空调指数"
            android:drawablePadding="10dp"
            android:drawableBottom="@mipmap/icon_air"/>
    </LinearLayout>
</LinearLayout>